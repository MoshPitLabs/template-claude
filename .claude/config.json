{
  "$schema": "https://claude.ai/schemas/config.json",
  "statusLine": {
    "type": "command",
    "command": "uv run $CLAUDE_PROJECT_DIR/.claude/status_lines/status_line_v6.py",
    "padding": 0
  },
  "hooks": {
    "tool-call-before": [
      {
        "tool": "Bash",
        "command": "./.claude/hooks/security-check.sh",
        "env": {
          "TOOL_NAME": "Bash"
        }
      },
      {
        "tool": "Read",
        "command": "./.claude/hooks/security-check.sh",
        "env": {
          "TOOL_NAME": "Read"
        }
      },
      {
        "tool": "Write",
        "command": "./.claude/hooks/security-check.sh",
        "env": {
          "TOOL_NAME": "Write"
        }
      },
      {
        "tool": "Write",
        "command": "./.claude/hooks/td-enforcer.sh",
        "env": {
          "TOOL_NAME": "Write"
        }
      },
      {
        "tool": "Edit",
        "command": "./.claude/hooks/security-check.sh",
        "env": {
          "TOOL_NAME": "Edit"
        }
      },
      {
        "tool": "Edit",
        "command": "./.claude/hooks/td-enforcer.sh",
        "env": {
          "TOOL_NAME": "Edit"
        }
      },
      {
        "tool": "Glob",
        "command": "./.claude/hooks/security-check.sh",
        "env": {
          "TOOL_NAME": "Glob"
        }
      },
      {
        "tool": "Grep",
        "command": "./.claude/hooks/security-check.sh",
        "env": {
          "TOOL_NAME": "Grep"
        }
      }
    ]
  }
}
